							<div class="give-pedding">
								<div class="block aligncenter">
                                <a href="@Url.RouteUrl("Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "wedding-and-anniversary"},
																		 {"tabid", "wedding"},
																		 {"page", 1},
																	 })">
									<img src="/Content/images/homepage/atoms/2-3.png" alt="Wedding & Anniversary" /></a>
								</div>
								<div class="cell bottomizer">
									<span class="block desc">Declare your love with our collection of wedding rings and
										anniversary bands. We offer diamond bands, diamond eternity rings, and 18k gold
										or platinum wedding bands.<br />
										<strong>Free Engraving</strong> with every order. </span>
									<ul class="top5">
										<li>@Html.RouteLink("Diamond Wedding Bands", "Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "wedding-and-anniversary"},
																		 {"tabid", "bands"},
