																	 {
																		 {"tabkey", "diamond-rings"},
																		 {"tabid", "diamond-bracelets"},
																		 {"page", 1},
																	 }) </li>
										<li>@Html.RouteLink("Diamond Wedding Rings", "Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "wedding-and-anniversary"},
																		 {"tabid", "wedding"},
																		 {"page", 1},
																	 }) </li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<div class="cell">
						<div class="displayatom block">
							<h1 class="title aligncenter">
								@Html.RouteLink("Diamonds Studs", "Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "diamond-rings"},
																		 {"tabid", "diamond-studs"},
																		 {"page", 1},
																	 }, new { @class = "gray" })</h1>
							<div class="give-pedding">
