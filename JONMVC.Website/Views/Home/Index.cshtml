                                <a href="@Url.RouteUrl("Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "diamond-rings"},
																		 {"tabid", "diamond-studs"},
																		 {"page", 1},
																	 })">
									<img src="/Content/images/homepage/atoms/2-2.png" alt="Diamonds Studs"/></a>
