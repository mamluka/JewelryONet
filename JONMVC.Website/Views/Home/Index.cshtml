							<div class="give-pedding">
								<div class="block aligncenter">
                                <a href="@Url.RouteUrl("Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "diamond-rings"},
																		 {"tabid", "engagement-rings"},
																		 {"page", 1},
																	 })">
									<img src="/Content/images/homepage/atoms/2-1.png"  alt="Diamond Jewelry"/></a>
								</div>
								<div class="cell bottomizer">
