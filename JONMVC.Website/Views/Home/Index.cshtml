					<ul class="top20">
						<li>@Html.RouteLink("18K Gold Diamond Earrings", "Tabs", new RouteValueDictionary()
																	 {
																		 {"tabkey", "diamond-rings"},
																		 {"tabid", "diamond-studs"},
																		 {"page", 1},
																	 }) </li>
						<li>@Html.RouteLink("18K Gold Diamond Solitaire Rings", "ChooseSetting", new RouteValueDictionary()
																									{
																										{"controller", "JewelDesign"},
																										{"action", "ChooseSetting"},
																										{"tabid","solitaire-settings"},
																										{"page", 1},
																									})</li>
						<li>@Html.RouteLink("18K Gold Diamond Pave Rings", "ChooseSetting", new RouteValueDictionary()
																									{
																										{"controller", "JewelDesign"},
																										{"action", "ChooseSetting"},
																										{"tabid","pave-settings"},
																										{"page", 1},
																									})</li>
					</ul>
				</div>
			</div>
