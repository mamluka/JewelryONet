@using JONMVC.Website.ViewModels.Views
@using MvcContrib.FluentHtml
@inherits MvcContrib.FluentHtml.ModelWebViewPage<CustomJewelCartItemViewModel>
<div class="table item width100">
    <div class="row">
        <div class="cell">
            <img src="@Model.Icon" />
        </div>
        <div class="cell">
        @if (!Model.NoActionLinkDispalyOnly)
        {
            <div class="actions">
                @Html.RouteLink("Remove item", "ShoppingcartRemoveitem", new {cartid = ViewModel.CartID})
            </div>
        }
            <div class="width100 clear top5">
                <span class="bold">Setting</span> <span class="left top5">Item number: @Model.Itemnumber
                    </span> <span class="right price">@Model.SettingPrice </span> <span class="right">
                        Price:</span>
                <div class="clear">
                </div>
                <span class="left">@Model.SettingDesciption</span>
            </div>
            @this.Select(x => x.Size).Options(new SelectList(SelectSourceFactory.RingSizes,"Key","Value")).Selected(Model.Size).Class("jewelsize").Attr("cartid",Model.CartID)
             <span class="block">Find Your Ring
                Size</span>
            <div class="width100 clear top10">
                <span class="bold">Diamond</span> <span class="left top5">Item number: @Model.DiamondID
                    </span> <span class="right price">@Model.DiamondPrice </span>
                <span class="right">Price:</span>
                <div class="clear">
                </div>
                <span class="left">@Model.DiamondDesciption</span>
            </div>
        </div>
    </div>
</div>
